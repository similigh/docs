{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Simili Bot",
  "description": "AI-powered GitHub issue management and semantic search",
  "colors": {
    "primary": "#3b82f6",
    "light": "#ffffff",
    "dark": "#0f172a"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Getting Started",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "index",
              "overview/features",
              "overview/architecture"
            ]
          },
          {
            "group": "Setup",
            "pages": [
              "setup/installation",
              "setup/quick-start",
              "setup/github-action"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "configuration/overview",
              "configuration/qdrant",
              "configuration/gemini",
              "configuration/repositories",
              "configuration/transfer-rules"
            ]
          }
        ]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Core Features",
            "pages": [
              "guides/semantic-search",
              "guides/duplicate-detection",
              "guides/issue-routing",
              "guides/quality-assessment",
              "guides/auto-triage"
            ]
          },
          {
            "group": "Advanced",
            "pages": [
              "guides/multi-repo-setup",
              "guides/config-inheritance",
              "guides/custom-workflows",
              "guides/deployment",
              "guides/troubleshooting"
            ]
          }
        ]
      },
      {
        "tab": "Reference",
        "groups": [
          {
            "group": "CLI Reference",
            "pages": [
              "reference/cli/process-command",
              "reference/cli/index-command"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "reference/config-schema",
              "reference/environment-variables"
            ]
          },
          {
            "group": "Pipeline Steps",
            "pages": [
              "reference/pipeline/steps",
              "reference/pipeline/context"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "reference/integrations/gemini",
              "reference/integrations/qdrant",
              "reference/integrations/github"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/similigh/simili-bot",
          "icon": "github"
        },
        {
          "anchor": "Issues",
          "href": "https://github.com/similigh/simili-bot/issues",
          "icon": "circle-alert"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/similigh/simili-bot"
      }
    ]
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/similigh/simili-bot",
      "x": "https://x.com/similigh"
    }
  },
  "appearance": {
    "strict": false
  }
}
